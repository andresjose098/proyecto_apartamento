<h1 class="h4 mb-4">Documentos</h1>

<%# Botón “Subir” solo visible para admin %>
<% if current_user.admin? %>
  <%= link_to "Subir nuevo", new_document_path, class: "btn btn-primary mb-3" %>
<% end %>

<table class="table table-sm table-hover">
  <thead>
    <tr>
      <th>Título</th>
      <th>Archivo</th>
      <th>Subido</th>
      <% if current_user.admin? %><th></th><% end %>
    </tr>
  </thead>
 <tbody>
  <% @documents.each do |doc| %>
    <tr>
      <td><%= doc.title %></td>
      <td><%= link_to doc.file.filename, document_path(doc) %></td>
      <td><%= l doc.created_at, format: :short %></td>

      <% if current_user.admin? %>
        <td>
          <%= button_to "Eliminar",
                        doc,
                        method: :delete,
                        data: { turbo_confirm: "¿Seguro?" },
                        class: "btn btn-sm btn-outline-danger" %>
        </td>
      <% end %>
    </tr>
  <% end %>
</tbody>

</table>
